    <!-- Sign-In Modal -->
  <div id="signIn" class="modal">
    <div class="modal-content center">
      <h4>User Log-In</h4>
      <p>Don't be a chump! Click the button to sign up!</p>
      <div class="row">
        <form class="col s10">
          <input placeholder="Name" id="name" type="text" class="validate">
          <input placeholder="Email" id="email" type="email" class="validate">
          <input placeholder="Password" id="password" type="password" class="validate">
        </form>
      </div>
    </div>
    <div class="modal-footer center">
      <button class="btn modal-close" id="logInBtn">Log-In</button>
      <button class="btn modal-close" id="signUpBtn">Sign-Up</button>
    </div>
  </div>

  <!-- Add Coin Modal -->
  <div id="addFav" class="modal">
    <div class="modal-content center">
      <h4>Add Crypto to you Favorites</h4>
      <div class = "Add Crypto">
        <div class = "row">
          <div class="input-field col s12">
            <select id="coinOptions">
              <option value="" disabled selected>Choose a Currency</option>
              <option value="ada">Cardano (ADA)</option>
              <option value="bat">Basic Attention Token (BAT)</option>
              <option value="btc">Bitcoin (BTC)</option>
              <option value="doge">Dogecoin (DOGE)</option>
              <option value="eth">Etherium (ETH)</option>
              <option value="ltc">Litecoin (LTC)</option>
              <option value="trx">Tron (TRX)</option>
              <option value="ven">VeChain (VEN)</option>
              <option value="xlm">Stellar (XLM)</option>
              <option value="xrp">Ripple (XRP)</option>
            </select>
          </div>
        </div>
      </div>
      <div class="modal-footer center">
      <button class="btn center modal-close" id="addCoinBtn">Add Crypto</button>
      </div>
    </div>
  </div>

